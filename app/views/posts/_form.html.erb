<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "error") %> Prevented this post from saving</h2>    
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <% if @tags %>
    <% @tags.each do |tag| %>
      <div>
          <%= check_box_tag "post[tag_ids][]", tag.id, @post.tags.include?(tag) %>
          <%= tag.content %>
      </div>
    <% end %>
  <% end %>

    <%= f.fields_for :tags do |tag_builder| %>
    <%= tag_builder.label :tag %>
    <%= tag_builder.text_field :content %><br>
    <% end %>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>