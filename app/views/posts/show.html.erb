
<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
    <% if current_user %>
      <% if current_user.id == @post.user_id %>
        
        | <%= link_to 'Delete', user_post_path(@post.user, @post), method: :delete, data: {confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </p>

  <p class="body">
    <%= @post.body %>

    <h4>Tags</h4>
        <% @post.tags.uniq.each do |tag| %>
        
        <li>  <%= tag.content %> </li>
        

        <% end %>

  </p>


    <!-- <button type="button" id="all_comments<%= @post.id %>">all comments</button>
 -->
  <div id="comments">
    <h2 id="comment_count"><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>


    <h3>Add a comment:</h3>
    <%= render "comments/form" %>
  </div>
</div>
